<h1>Sign Up</h1>

<%= form_for(@user, url: signup_path) do |form| %>

<%= form.label :name %>
<%= form.text_field :name, class: 'form-control' %>

<%= form.submit "Signup", class: "btn btn-primary" %>
<% end %>

<section class="mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-8 col-xl-6 card p-5 bg-light">
                <div class="row">
                    <div class="col text-center">
                        <h1>Register</h1>
                        <p class="text-h3 text-secondary">
                            <em>Welcome back to Buzzlife, Get yor lastest articles after you login</em>
                        </p>
                    </div>
                </div>
                <%= form_for(@user, url: signup_path) do |form| %>
                <div class="row align-items-center">
                    <div class="col mt-4">
                        <%= form.label :name %>
                        <%= form.text_field :name, class: 'form-control' %>

                    </div>
                </div>


                <div class="row justify-content-start mt-4">
                    <div class="col">
                        <%= form.submit "Signup", class: "btn btn-primary mt-4" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>