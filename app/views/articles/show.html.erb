<p id="notice"><%= notice %></p>
<div class="container">
    <div class="card">
        <div class="card-header">
            <%= @article.title %>
        </div>
        <%=  image_tag @article.image.url, :width => 400, :height => 500, :crop=>"fill" %>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p><%= @article.description %></p>
                <footer class="blockquote-footer"><%= @article.author.name %><cite title="Source Title"><%= time_ago_in_words(@article.created_at) %> ago</cite></footer>
            </blockquote>
        </div>
        <p class="article-votes container">
            <span> <i class="fas fa-heart"></i> <%= @article.votes.size %> </span>
            <% if current_user == @article.author %>
            <span class="votes">
                <% if @vote %>
                <a rel="nofollow" data-method="delete" href="<%= article_vote_path(id: @vote.id, article_id: @article.id) %>"> <i class="fas fa-heart"></i>Unvote</a>
                <% else %>
                <a rel="nofollow" data-method="post" href="<%= article_votes_path(article_id: @article.id)%>"> <i class="far fa-heart"></i>Vote</a>
                <% end %>
                <% end %>
            </span>
            <% if current_user == @article.author %>
            <% link_to 'Edit Article', edit_article_path(@article) %>
            <% end %>
        </p>
    </div>
</div>

