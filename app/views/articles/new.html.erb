<div class="new-article">
    <div class="containe p-1">
        <% if @article.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
                <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <%= form_with(model: @article, local: true) do |form| %>

        <div class="wrap">
            <h1>Write an Article</h1>
            <p class="text-center">Express your thoughts here</p>
        </div>
        <div class="form-group">
            <%# form.label :title, class:"text-secondary bold" %>
            <%= form.text_field :title, class: 'name', placeholder:"Tittle"  %>
        </div>

        <div class="form-group">
            <%# form.label :description, class:"text-secondary bold" %>
            <%= form.text_area :description, class: 'mainArea ', placeholder:"Description" %>
        </div>

        <div class="form-group ">
            <%= form.label :category, class:"text-white bold" %><br />
            <%= form.select :category_id, Category.all.map {|cat| [cat.name, cat.id]}, class: 'form-group text-secondary' %>
            <%= form.file_field :image, class: "" %>
        </div>

        <div class="actions">
            <%= form.submit 'Create Article', class:"bigBtn" %>
        </div>

        <% end %>
    </div>
</div>