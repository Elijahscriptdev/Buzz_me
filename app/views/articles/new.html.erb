<%# render 'form', article: @article %>

<%# link_to 'Back', articles_path %>
<div class="my-5">
    <div class="container p-5 card bg-light">
        <%# form_for(:article, url: new_article_path) do |form| %>
        <%= form_with(model: @article, local: true) do |form| %>
        <% if @article.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
                <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <h1 class="text-center">Create New Article</h1>
        <div class="form-group">
            <%= form.label :title, class:"text-secondary bold" %>
            <%= form.text_field :title, class: 'form-control'  %>
        </div>

        <div class="form-group">
            <%= form.label :description, class:"text-secondary bold" %>
            <%= form.text_area :description, class: 'form-control ', rows:"5"  %>
        </div>

        <div class="form-group ">
            <%= form.label :category, class:"text-secondary bold" %><br />
            <%= form.select :category_id, Category.all.map {|cat| [cat.name, cat.id]}, class: 'form-group' %>
        </div>
        <div class="form-group ">
            <%= form.file_field :image %>
        </div>
        <div class="actions">
            <%= form.submit 'Create Article', class:"btn btn-secondary" %>
        </div>

        <span class="image">
            <%# form.file_field :image %>
        </span>
        <% end %>
    </div>
</div>